@model Entity.Concrete1.Category
@{
    ViewBag.Title = "CategoryAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CategoryAdd</h2>

@using (Html.BeginForm("CategoryAdd", "Product", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Id")
        @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />
        <br />
        <button class="btn btn-primary">Kaydet</button>
    </div>

}