@model Entity.Concrete1.Product
@{
    ViewBag.Title = "ProductAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ProductAdd</h2>


@using (Html.BeginForm("ProductAdd", "Product", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Ürün Id")
        @Html.TextBoxFor(x => x.ProductId, new { @class = "form-control" })
        <br />
        @Html.Label("Ürün Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

        @Html.Label("Ürün Stoğu")
        @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })

        @Html.Label("Ürün Fiyatı")
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })

        @Html.Label("Kategorisi")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.d, new { @class = "form-control" })

        <br />
        <br />
        <button class="btn btn-primary">Ürün ekle</button>
    </div>

}