@model Entity.Concrete1.Barcode
@{
    ViewBag.Title = "ScanBarcode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ScanBarcode</h2>

@using (Html.BeginForm("ScanBarcode", "Product", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ProductId)
    @Html.HiddenFor(x => x.CreatedDate)

    <div class="form-group">
        @Html.Label("Barkod Numarası")
        @Html.TextBoxFor(x => x.Number, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Hareket Tipi")
        <div>
            <label>
                @Html.RadioButtonFor(x => x.MovementType, true) Giriş
            </label>
            <label>
                @Html.RadioButtonFor(x => x.MovementType, false) Çıkış
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
}